@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container" style="padding-top: 50px;">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Template &amp; Data</h3>
        </div>
        <div class="panel-body">
            <form method="post">
                <div class="form-group">
                    <label for="fluidTemplate">Fluid Template</label>
                    <textarea class="form-control" name="fluidTemplate" id="fluidTemplate" rows="6">
@Model.FluidTemplate
                    </textarea>
                </div>
                <div class="form-group">
                    <label for="templateData">Template Data</label>
                    <textarea class="form-control" name="fluidModel" id="fluidModel" rows="6">
@Json.Serialize(Model.FluidModel)
                    </textarea>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Rendered Template
        </div>
        <div class="panel-body">
            <fluid template="@Model.FluidTemplate" model="@Model.FluidModel">
            </fluid>
        </div>
    </div>
</div>
